@model IEnumerable<ToyStore.Models.TProduct>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить товар", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TCategorie.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TSubcategory.Subcategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TCategorie.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TSubcategory.Subcategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) Грн.
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmallDescription)
            </td>
            <td>
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Picture) + "\" />")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.ActionLink("Редоктировать", "Edit", new { id=item.idProduct }) |
                @Html.ActionLink("Детально", "Details", new { id=item.idProduct }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.idProduct })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
