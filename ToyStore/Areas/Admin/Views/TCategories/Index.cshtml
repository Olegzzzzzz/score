@model IEnumerable<ToyStore.Models.TCategorie>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список категорий</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Редоктировать", "Edit", new { id=item.idCategorie }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.idCategorie })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
