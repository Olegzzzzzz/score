@model IEnumerable<ToyStore.Models.TOrder>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список</title>
</head>
<body>
    <p>
        @Html.ActionLink("Создать", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TBuyer.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TProduct.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TBuyer.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TProduct.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id=item.idOrder }) |
                @Html.ActionLink("Детально", "Details", new { id=item.idOrder }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.idOrder })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
